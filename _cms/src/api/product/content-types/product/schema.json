{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "tagline": {
      "type": "string"
    },
    "description": {
      "type": "blocks"
    },
    "color": {
      "type": "string",
      "default": "blue"
    },
    "template": {
      "type": "enumeration",
      "enum": [
        "minimal",
        "feature-rich",
        "video-hero",
        "stats-focused"
      ]
    },
    "heroVideo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "files",
        "videos"
      ]
    },
    "displayOrder": {
      "type": "integer",
      "default": 0
    },
    "content_sections": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::content-section.content-section"
    }
  }
}
